<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/g_p_side_2">

    <ImageView
        android:layout_width="196dp"
        android:layout_height="196dp"
        android:src="@drawable/welcome_anim_1"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/g_margin_top"
        android:gravity="center_horizontal"
        android:text="@string/set_ac_name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ac_name_counter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="@dimen/g_text" />

        <com.apyeng.airconhomev2.ClearableEditText
            android:id="@+id/ac_name_enter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/enter_background_1"
            android:singleLine="true"
            android:hint="@string/enter_ac_name"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>