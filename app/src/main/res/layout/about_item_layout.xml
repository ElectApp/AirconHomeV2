<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:theme="@style/AppTheme">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/g_p_side_2"
        android:paddingBottom="@dimen/g_p_side_2"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/colorWhite"
        android:foreground="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/tv_title"
            android:layout_weight="0.6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/g_p_side_2"
            android:paddingEnd="@dimen/g_p_side_2"
            android:text="Title"/>

        <TextView
            android:visibility="visible"
            android:id="@+id/tv_detail"
            android:layout_weight="0.4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/g_p_side_2"
            android:gravity="end"
            android:textColor="@color/colorGray3"
            android:text="details"/>

        <ImageView
            android:visibility="visible"
            android:id="@+id/img_next"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="@dimen/g_p_side"
            android:layout_gravity="end"
            android:src="@drawable/ic_navigate_next"/>

    </LinearLayout>

    <View
        android:id="@+id/group_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/group_divider"
        android:background="@color/colorMainBackgroundTop"/>

    <View
        android:id="@+id/child_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/child_divider"
        android:layout_marginStart="@dimen/g_p_side_2"
        android:background="@color/colorLine"/>

</LinearLayout>